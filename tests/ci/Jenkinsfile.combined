pipeline {
  agent none 
  stages {
    stage('Determine HPC Platform') {
       agent {
        label 'built-in'   
       }
      steps {
        script {
          for (label in pullRequest.labels) {
             if ((label.matches("hera-(.*)" || "jet-(.*)" || "gaeac5-(.*)" || "gaea-(.*)" || "hercules-(.*)" || "orion-(.*)" || "derecho-(.*)"))) {
               println(label) 
            }
 
         }
       }
      }    
    }
  } 
}
